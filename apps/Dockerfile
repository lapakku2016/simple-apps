# MENENTUKAN IMAGE
FROM node:18.16

# PERINTAH YANG DIJALANKAN
RUN apt update -y && npm install

# COPY FILE TO IMAGE
ADD . /app

# MAINTAINER IMAGE
LABEL email="jeryporezer@gmail.com"

# PERINTAH YANG DIJALANKAN PADA SAAT CONTAINER SUDAH UP
CMD ["npm", "start"]

# DESCRIBE EXPOSE PORT
EXPOSE 3000

